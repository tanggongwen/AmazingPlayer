<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30mm"
            android:layout_marginLeft="30mm"
            android:textSize="36mm"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30mm"
            android:paddingRight="30mm"
            android:textSize="30mm"
            android:minLines="4"
            android:textColor="#252525"
            android:lineSpacingExtra="20mm"
            android:maxLines="4"
            android:layout_marginTop="35mm"
            android:ellipsize="end" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30mm"
            android:paddingRight="30mm"
            android:layout_marginTop="30mm">
            <com.mahuahudong.res.weiget.CircleImageView
                android:id="@+id/imgHead"
                android:layout_width="51mm"
                android:layout_height="51mm" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24mm"
                android:textColor="#0185e2"
                android:layout_toRightOf="@id/imgHead"
                android:layout_marginLeft="14mm"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="24mm"
                android:textColor="#999999" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>