<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/privacy_dialog_width"
    android:layout_height="@dimen/privacy_dialog_height"
    android:background="@drawable/shape_dialog_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38mm"
            android:layout_marginTop="45mm"
            android:textColor="#000000"
            android:text="用户协议与隐私政策"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26mm"
            android:paddingLeft="42mm"
            android:paddingRight="42mm"
            android:layout_marginTop="30mm"
            android:lineSpacingExtra="10mm"
            android:textColor="#7d7d7d" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350mm"
            android:layout_marginTop="40mm">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvContent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26mm"
                    android:paddingLeft="42mm"
                    android:lineSpacingExtra="10mm"
                    android:paddingRight="42mm"
                    android:textColor="#7d7d7d" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88mm"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2mm"
            android:background="#eeeeee"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="34mm"
                android:textColor="#e82744"
                android:text="同意并继续使用APP"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>