<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="NiceImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="layout_border_width" format="dimension" />
        <attr name="layout_border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>

    <!-- slide bar 有效内容背景 -->
    <attr name="backgroundColor" format="color|reference" />
    <!-- slide bar　描边 -->
    <attr name="strokeColor" format="color|reference" />
    <!-- slide bar 文字颜色 -->
    <attr name="sideTextColor" format="color|reference" />
    <!-- slide bar　文字大小 -->
    <attr name="sideTextSize" format="dimension" />
    <!-- slide bar 选中文字颜色 -->
    <attr name="selectTextColor" format="color|reference" />
    <!-- slide bar 选中文字大小 -->
    <attr name="selectTextSize" format="dimension" />
    <!-- slide bar　选中时候提示文字颜色 -->
    <attr name="hintTextColor" format="color|reference" />
    <!-- slide bar　选中时候提示文字大小 -->
    <attr name="hintTextSize" format="dimension" />
    <!-- slide bar　选中时候提示圆形半径 -->
    <attr name="hintCircleRadius" format="dimension" />
    <!-- slide bar　选中时候提示圆形颜色 -->
    <attr name="hintCircleColor" format="color|reference" />
    <!-- slide bar　选中时候提示背景形状 -->
    <attr name="hintShape" format="enum" >
        <enum name="circle" value="0" />
        <enum name="rectangle" value="1" />
    </attr>
    <!-- slide bar　选中时候波浪颜色 -->
    <attr name="waveColor" format="color|reference" />
    <!-- slide bar　选中时候波浪半径 -->
    <attr name="waveRadius" format="dimension" />
    <!-- slide bar　里面文字上＋下padding -->
    <attr name="contentPadding" format="dimension" />
    <!-- slide bar　上+下+右padding -->
    <attr name="barPadding" format="dimension" />
    <!-- slide bar　宽度 -->
    <attr name="barWidth" format="dimension" />
    <declare-styleable name="AZWaveSideBarView">
        <!-- slide bar 有效内容背景 -->
        <attr name="backgroundColor" />
        <!-- slide bar　描边 -->
        <attr name="strokeColor" />
        <!-- slide bar 文字颜色 -->
        <attr name="sideTextColor" />
        <!-- slide bar　文字大小 -->
        <attr name="sideTextSize" />
        <!-- slide bar 选中文字颜色 -->
        <attr name="selectTextColor" />
        <!-- slide bar 选中文字大小 -->
        <attr name="selectTextSize" />
        <!-- slide bar　选中时候提示文字颜色 -->
        <attr name="hintTextColor" />
        <!-- slide bar　选中时候提示文字大小 -->
        <attr name="hintTextSize" />
        <!-- slide bar　选中时候提示圆形半径 -->
        <attr name="hintCircleRadius" />
        <!-- slide bar　选中时候提示圆形颜色 -->
        <attr name="hintCircleColor" />
        <!-- slide bar　选中时候波浪颜色 -->
        <attr name="waveColor" />
        <!-- slide bar　选中时候波浪半径 -->
        <attr name="waveRadius" />
        <!-- slide bar　里面文字上＋下padding -->
        <attr name="contentPadding" />
        <!-- slide bar　上+下+右padding -->
        <attr name="barPadding" />
        <!-- slide bar　宽度 -->
        <attr name="barWidth" />
    </declare-styleable>

    <declare-styleable name="AZSideBarView">
        <!-- slide bar 有效内容背景 -->
        <attr name="backgroundColor" />
        <!-- slide bar　描边 -->
        <attr name="strokeColor" />
        <!-- slide bar 文字颜色 -->
        <attr name="sideTextColor" />
        <!-- slide bar　文字大小 -->
        <attr name="sideTextSize" />
        <!-- slide bar 选中文字颜色 -->
        <attr name="selectTextColor" />
        <!-- slide bar 选中文字大小 -->
        <attr name="selectTextSize" />
        <!-- slide bar　选中时候提示文字颜色 -->
        <attr name="hintTextColor" />
        <!-- slide bar　选中时候提示文字大小 -->
        <attr name="hintTextSize" />
        <!-- slide bar　选中时候提示圆形半径 -->
        <attr name="hintCircleRadius" />
        <attr name="hintShape" />
        <!-- slide bar　选中时候提示圆形颜色 -->
        <attr name="hintCircleColor" />
        <!-- slide bar　里面文字上＋下padding -->
        <attr name="contentPadding" />
        <!-- slide bar　上+下+右padding -->
        <attr name="barPadding" />
        <!-- slide bar　宽度 -->
        <attr name="barWidth" />
    </declare-styleable>
    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="tl_rvindicator_color" format="color"/>
    <!-- 设置显示器高度 -->
    <attr name="tl_rvindicator_height" format="dimension"/>
    <!-- 设置显示器固定宽度 -->
    <attr name="tl_rvindicator_width" format="dimension"/>
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="tl_rvindicator_margin_left" format="dimension"/>
    <attr name="tl_rvindicator_margin_top" format="dimension"/>
    <attr name="tl_rvindicator_margin_right" format="dimension"/>
    <attr name="tl_rvindicator_margin_bottom" format="dimension"/>
    <!-- 设置显示器圆角弧度-->
    <attr name="tl_rvindicator_corner_radius" format="dimension"/>
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="tl_rvindicator_gravity" format="enum">
        <enum name="TOP" value="48"/>
        <enum name="BOTTOM" value="80"/>
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="tl_rvindicator_style" format="enum">
        <enum name="NORMAL" value="0"/>
        <enum name="TRIANGLE" value="1"/>
        <enum name="BLOCK" value="2"/>
    </attr>
    <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="tl_rvindicator_width_equal_title" format="boolean"/>
    <!-- 设置显示器支持动画-->
    <attr name="tl_rvindicator_anim_enable" format="boolean"/>
    <!-- 设置显示器动画时间-->
    <attr name="tl_rvindicator_anim_duration" format="integer"/>
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="tl_rvindicator_bounce_enable" format="boolean"/>

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="tl_rvunderline_color" format="color"/>
    <!-- 设置下划线高度 -->
    <attr name="tl_rvunderline_height" format="dimension"/>
    <!-- 设置下划线上方还是下方-->
    <attr name="tl_rvunderline_gravity" format="enum">
        <enum name="TOP" value="48"/>
        <enum name="BOTTOM" value="80"/>
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="tl_rvdivider_color" format="color"/>
    <!-- 设置分割线宽度 -->
    <attr name="tl_rvdivider_width" format="dimension"/>
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="tl_rvdivider_padding" format="dimension"/>

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="tl_rvtab_padding" format="dimension"/>
    <!-- 设置tab大小等分 -->
    <attr name="tl_rvtab_space_equal" format="boolean"/>
    <!-- 设置tab固定大小 -->
    <attr name="tl_rvtab_width" format="dimension"/>

    <!-- title -->
    <!-- 设置字体大小 -->
    <attr name="tl_rvtextsize" format="dimension"/>
    <!-- 设置字体选中颜色 -->
    <attr name="tl_rvtextSelectColor" format="color"/>
    <!-- 设置字体未选中颜色 -->
    <attr name="tl_rvtextUnselectColor" format="color"/>
    <!-- 设置字体加粗 -->
    <attr name="tl_rvtextBold" format="enum">
        <enum name="NONE" value="0"/>
        <enum name="SELECT" value="1"/>
        <enum name="BOTH" value="2"/>
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="tl_rvtextAllCaps" format="boolean"/>

    <declare-styleable name="SlidingTabLayout">
        <!-- indicator -->
        <attr name="tl_rvindicator_color"/>
        <attr name="tl_rvindicator_height"/>
        <attr name="tl_rvindicator_width"/>
        <attr name="tl_rvindicator_margin_left"/>
        <attr name="tl_rvindicator_margin_top"/>
        <attr name="tl_rvindicator_margin_right"/>
        <attr name="tl_rvindicator_margin_bottom"/>
        <attr name="tl_rvindicator_corner_radius"/>
        <attr name="tl_rvindicator_gravity"/>
        <attr name="tl_rvindicator_style"/>
        <attr name="tl_rvindicator_width_equal_title"/>

        <!-- underline -->
        <attr name="tl_rvunderline_color"/>
        <attr name="tl_rvunderline_height"/>
        <attr name="tl_rvunderline_gravity"/>

        <!-- divider -->
        <attr name="tl_rvdivider_color"/>
        <attr name="tl_rvdivider_width"/>
        <attr name="tl_rvdivider_padding"/>

        <!-- tab -->
        <attr name="tl_rvtab_padding"/>
        <attr name="tl_rvtab_space_equal"/>
        <attr name="tl_rvtab_width"/>

        <!-- title -->
        <attr name="tl_rvtextsize"/>
        <attr name="tl_rvtextSelectColor"/>
        <attr name="tl_rvtextUnselectColor"/>
        <attr name="tl_rvtextBold"/>
        <attr name="tl_rvtextAllCaps"/>

    </declare-styleable>

    <declare-styleable name="CommonTabLayout">
        <!-- indicator -->
        <attr name="tl_rvindicator_color"/>
        <attr name="tl_rvindicator_height"/>
        <attr name="tl_rvindicator_width"/>
        <attr name="tl_rvindicator_margin_left"/>
        <attr name="tl_rvindicator_margin_top"/>
        <attr name="tl_rvindicator_margin_right"/>
        <attr name="tl_rvindicator_margin_bottom"/>
        <attr name="tl_rvindicator_corner_radius"/>
        <attr name="tl_rvindicator_gravity"/>
        <attr name="tl_rvindicator_style"/>
        <attr name="tl_rvindicator_anim_enable"/>
        <attr name="tl_rvindicator_anim_duration"/>
        <attr name="tl_rvindicator_bounce_enable"/>

        <!-- underline -->
        <attr name="tl_rvunderline_color"/>
        <attr name="tl_rvunderline_height"/>
        <attr name="tl_rvunderline_gravity"/>

        <!-- divider -->
        <attr name="tl_rvdivider_color"/>
        <attr name="tl_rvdivider_width"/>
        <attr name="tl_rvdivider_padding"/>

        <!-- tab -->
        <attr name="tl_rvtab_padding"/>
        <attr name="tl_rvtab_space_equal"/>
        <attr name="tl_rvtab_width"/>

        <!-- title -->
        <attr name="tl_rvtextsize"/>
        <attr name="tl_rvtextSelectColor"/>
        <attr name="tl_rvtextUnselectColor"/>
        <attr name="tl_rvtextBold"/>
        <attr name="tl_rvtextAllCaps"/>

        <!-- icon -->
        <!-- 设置icon宽度 -->
        <attr name="tl_rviconWidth" format="dimension"/>
        <!-- 设置icon高度 -->
        <attr name="tl_rviconHeight" format="dimension"/>
        <!-- 设置icon是否可见 -->
        <attr name="tl_rviconVisible" format="boolean"/>
        <!-- 设置icon显示位置,对应Gravity中常量值 -->
        <attr name="tl_rviconGravity" format="enum">
            <enum name="LEFT" value="3"/>
            <enum name="TOP" value="48"/>
            <enum name="RIGHT" value="5"/>
            <enum name="BOTTOM" value="80"/>
        </attr>
        <!-- 设置icon与文字间距 -->
        <attr name="tl_rviconMargin" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="SegmentTabLayout">
        <!-- indicator -->
        <attr name="tl_rvindicator_color"/>
        <attr name="tl_rvindicator_height"/>
        <attr name="tl_rvindicator_margin_left"/>
        <attr name="tl_rvindicator_margin_top"/>
        <attr name="tl_rvindicator_margin_right"/>
        <attr name="tl_rvindicator_margin_bottom"/>
        <attr name="tl_rvindicator_corner_radius"/>
        <attr name="tl_rvindicator_anim_enable"/>
        <attr name="tl_rvindicator_anim_duration"/>
        <attr name="tl_rvindicator_bounce_enable"/>

        <!-- divider -->
        <attr name="tl_rvdivider_color"/>
        <attr name="tl_rvdivider_width"/>
        <attr name="tl_rvdivider_padding"/>

        <!-- tab -->
        <attr name="tl_rvtab_padding"/>
        <attr name="tl_rvtab_space_equal"/>
        <attr name="tl_rvtab_width"/>

        <!-- title -->
        <attr name="tl_rvtextsize"/>
        <attr name="tl_rvtextSelectColor"/>
        <attr name="tl_rvtextUnselectColor"/>
        <attr name="tl_rvtextBold"/>
        <attr name="tl_rvtextAllCaps"/>

        <attr name="tl_rvbar_color" format="color"/>
        <attr name="tl_rvbar_stroke_color" format="color"/>
        <attr name="tl_rvbar_stroke_width" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean"/>
    </declare-styleable>
</resources>