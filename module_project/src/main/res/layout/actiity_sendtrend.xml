<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.mahuahudong.project.viewmodel.SendTrendViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80mm">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="70mm"
                android:layout_height="70mm"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20mm"
                binding:onClickCommand="@{viewModel.backCommand}"
                android:src="@drawable/ic_chevron_left_48px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28mm"
                android:text="发表动态"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_marginLeft="10mm"
               android:layout_toRightOf="@+id/imgBack"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20mm"
                android:paddingRight="20mm"
                android:paddingTop="14mm"
                android:paddingBottom="14mm"
                android:textSize="26mm"
                android:layout_marginRight="30mm"
                android:text="发表"
                android:textColor="@{viewModel.tvColorOb}"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300mm"
            android:textSize="26mm"
            android:hint="这一刻的想法"
            android:gravity="start"/>
    </LinearLayout>
</layout>