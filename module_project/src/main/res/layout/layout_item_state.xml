<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.mahuahudong.project.viewmodel.PersonStateItemViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        binding:onClickCommand="@{itemViewModel.openTrendCommand}">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90mm"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30mm">
            <com.mahuahudong.res.weiget.CircleImageView
                android:layout_width="60mm"
                android:layout_height="60mm"
                android:src="@drawable/ic_account_circle_48px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20mm">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="26mm"
                    android:text="Anthony"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22mm"
                    android:text="1年前"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="26mm"
            android:text="这里春天的夜晚比冬天的更冷"
            android:layout_marginLeft="30mm"
            android:layout_marginTop="10mm"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70mm"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                binding:onClickCommand="@{itemViewModel.openTrendCommand}"
                android:gravity="center">
                <ImageView
                    android:layout_width="40mm"
                    android:layout_height="40mm"
                    android:src="@drawable/ic_chat_bubble_outline_48px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24mm"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="5mm"
                    android:text="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="40mm"
                    android:layout_height="40mm"
                    android:src="@drawable/ic_thumb_up_48px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24mm"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="5mm"
                    android:text="2"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>