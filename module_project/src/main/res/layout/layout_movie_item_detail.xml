<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.mahuahudong.project.viewmodel.MovieDetailRelatedViewModel" />
        <import type="com.mahuahudong.res.weiget.LineManagers" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30mm"
                android:paddingLeft="30mm"
                android:paddingRight="30mm"
                android:textSize="40mm"
                android:lineSpacingExtra="20mm"
                android:textStyle="bold"
                android:background="#ffffff"
                android:text="@{itemViewModel.titleOb}" />

            <TextView
                android:id="@+id/tvIntroduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20mm"
                android:paddingLeft="30mm"
                android:paddingRight="30mm"
                android:textSize="24mm"
                android:paddingBottom="26mm"
                android:lineSpacingExtra="10mm"
                android:textColor="#b0b0b0"
                android:background="#ffffff"
                android:text="@{itemViewModel.desOb}" />


        </LinearLayout>

    </LinearLayout>

</layout>